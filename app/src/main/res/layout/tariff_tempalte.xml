<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/LocationLayout">

        <android.support.v7.widget.AppCompatTextView
            style="@style/parking_title"
            android:id="@+id/tariff_title"
            android:text="test tariff 00001"
            android:textAlignment="center"
            >
        </android.support.v7.widget.AppCompatTextView>

        <android.support.v7.widget.AppCompatTextView
            style="@style/parking_text_values"
            android:id="@+id/tariff_valid_from"
            android:text="05:00"
            >
        </android.support.v7.widget.AppCompatTextView>

        <android.support.v7.widget.AppCompatTextView
            style="@style/parking_text_values"
            android:id="@+id/tariff_valid_to"
            android:text="12:00"
            >
        </android.support.v7.widget.AppCompatTextView>

        <android.support.v7.widget.AppCompatTextView
            style="@style/parking_text_values"
            android:id="@+id/tariff_price"
            android:text="55:00"
            >
        </android.support.v7.widget.AppCompatTextView>

        <android.support.v7.widget.AppCompatTextView
            style="@style/parking_text_values"
            android:id="@+id/tariff_max_time"
            android:text="60:00"
            >
        </android.support.v7.widget.AppCompatTextView>

    </LinearLayout>
    <LinearLayout style="@style/LocLayoutBorderBottom"></LinearLayout>

</LinearLayout>